#%Module -*- tcl -*-
#
# PLUMED 2.4.3
#

proc ModulesHelp { } {

    puts stderr "This module adds the PLUMED 2.4.3 package to your environment."
    puts stderr ""
}

module-whatis "Adds PLUMED 2.4.3 to your environment, built using OpenBLAS and libmatheval"

# Add binary to PATH
prereq gcc-libs/4.9.2
prereq compilers/intel/2018
prereq mpi/intel/2018
prereq flex/2.5.39
prereq libmatheval/1.1.11

conflict plumed

set root                        /shared/ucl/apps/plumed/2.4.3/intel-2018/openblas
prepend-path PATH               $root/bin
prepend-path LD_LIBRARY_PATH    $root/lib
prepend-path LIBRARY_PATH       $root/lib
prepend-path CPATH              $root/include
prepend-path INCLUDE		$root/include
prepend-path PKG_CONFIG_PATH    $root/lib/pkgconfig

setenv PLUMED_KERNEL          	$root/lib/libplumedKernel.so

