proc ModulesHelp { } {

    puts stderr "This module adds cctools 5.4.1 to your environment."
    puts stderr ""
}

module-whatis "Adds cctools 5.4.1 to your environment."

prereq gcc-libs/4.9.2

conflict cctools

set root                      	/shared/ucl/apps/cctools/5.4.1/gnu-4.9.2
prepend-path PATH		$root/bin
prepend-path LD_LIBRARY_PATH    $root/lib
prepend-path LIBRARY_PATH       $root/lib
prepend-path INCLUDE_PATH	$root/include
prepend-path CPATH		$root/include
prepend-path MANPATH		$root/share/man
prepend-path CMAKE_PREFIX_PATH  $root
setenv PARROT_CVMFS_REPO	"<default-repositories>"
setenv PARROT_ALLOW_SWITCHING_CVMFS_REPOSITORIES	yes
setenv HTTP_PROXY		'DIRECT\;'
