#%Module -*- tcl -*-
##
## BEAST 2.3.0
##
##                                                      O.K. 20th July 2015

proc ModulesHelp { } {

    puts stderr "Adds BEAST 2.3.0 to your PATH."
    puts stderr ""
    puts stderr "BEAST, Bayesian Evolutionary Analysis Sampling Trees, is a"
    puts stderr "cross-platform program for Bayesian MCMC analysis of molecular"
    puts stderr "sequences. Tracer is a program for analysing the trace files"
    puts stderr "generated by Bayesian MCMC runs. FigTree is designed as a"
    puts stderr "graphical viewer of phylogenetic trees produced by BEAST and as"
    puts stderr "a program for producing publication-ready figures."
    puts stderr ""
    puts stderr "Addons: DISSECT, MODEL_SELECTION, SNAPP"
    puts stderr ""
    puts stderr "Directory: /shared/ucl/apps/beast/2.3.0/BEAST"

}

module-whatis "Adds BEAST 2.3.0 with addons to your PATH."

# Add binary to PATH
conflict beast

prereq gcc-libs/4.9.2
prereq java/1.8.0_45

set root /shared/ucl/apps/beast/2.3.0/BEAST
set addonroot /shared/ucl/apps/beast/2.3.0/BEAST/addons

prepend-path PATH        $root/bin
prepend-path PATH        $addonroot/DISSECT/lib
prepend-path PATH        $addonroot/MODEL_SELECTION/lib
prepend-path PATH        $addonroot/SNAPP/lib

