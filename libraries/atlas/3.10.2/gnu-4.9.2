proc ModulesHelp { } {
  puts stderr "\tAdds ATLAS 3.10.2 for GCC 4.9.2 compilers to your environment variables."
}

module-whatis "adds ATLAS 3.10.2 for GCC 4.9.2 compilers to your environment variables"

conflict atlas
conflict openblas
prereq gcc-libs/4.9.2

set              root              /shared/ucl/apps/atlas/3.10.2/gnu-4.9.2

prepend-path     PATH              $root/bin
prepend-path     MANPATH           $root/share/man
prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path     LIBRARY_PATH      $root/lib
prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include
setenv           BLAS_TAG          atlas
setenv   	 ATLASROOT	   $root

prepend-path CMAKE_PREFIX_PATH  $root
