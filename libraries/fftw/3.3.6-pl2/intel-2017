#%Module -*- tcl -*-
##
## modulefile
##
## Legion build uses SSE2 and only single and double precision.
## Quad precision doesn't build with icc

proc ModulesHelp { } {
  puts stderr "\tAdds FFTW 3.3.6 pl2 for Intel compilers to your environment variables. Includes single and double precision versions on Legion, plus long-double on Grace/Thomas. Includes OpenMP and POSIX threads libraries."
}

module-whatis "Adds FFTW 3.3.6 pl2 for Intel compilers to your environment variables. Includes single and double precision versions on Legion, plus long-double on Grace/Thomas. Includes OpenMP and POSIX threads libraries."

conflict fftw
prereq gcc-libs/4.9.2

set              root              /shared/ucl/apps/fftw/3.3.6-pl2/intel-2017

prepend-path     PATH              $root/bin
prepend-path     MANPATH           $root/share/man
prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path        LIBRARY_PATH   $root/lib
prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

setenv           FFTWLIBDIR        $root/lib
setenv           FFTWINCLUDE       $root/include
setenv           FFTWLIB           fftw

prepend-path PKG_CONFIG_PATH	$root/lib/pkgconfig
prepend-path CMAKE_PREFIX_PATH  $root

