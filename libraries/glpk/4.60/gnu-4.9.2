#%Module -*- tcl -*-
##
## modulefile
##
## GLPK 4.60 compiled using GCC 4.9.2

proc ModulesHelp { } {
    puts stderr "Adds the GNU Linear Programming Kit Version 4.60 compiled using GCC 4.9.2"
    puts stderr "to your environment."
    puts stderr ""
    puts stderr "GLPK is intended for solving large-scale linear programming (LP),"
    puts stderr "mixed integer programming (MIP), and other related problems. It is"
    puts stderr "a library of C routines. GLPK supports the GNU MathProg modeling"
    puts stderr "language, which is a subset of the AMPL language. "
    puts stderr ""
    puts stderr "Directory: /shared/ucl/apps/GLPK/4.60/gcc"
}

module-whatis "Adds the GNU Linear Programming Kit Version 4.60 for GCC 4.9.2 to your environment."

conflict glpk
prereq gcc-libs/4.9.2

set prefix /shared/ucl/apps/GLPK/4.60/gcc
# set prefix /home/ccaabaa/lib/apps/GLPK/4.60/gcc


if { [file isdirectory $prefix/bin] } then {
  prepend-path      PATH                 $prefix/bin
}

if { [file isdirectory $prefix/man] } then {
  prepend-path      MANPATH              $prefix/man
}

if { [file isdirectory $prefix/share/man] } then {
  prepend-path      MANPATH              $prefix/share/man
}

if { [file isdirectory $prefix/lib] } then {
  prepend-path      LIBRARY_PATH         $prefix/lib
  prepend-path      LD_LIBRARY_PATH      $prefix/lib
}

if { [file isdirectory $prefix/lib64] } then {
  prepend-path      LIBRARY_PATH         $prefix/lib64
  prepend-path      LD_LIBRARY_PATH      $prefix/lib64
}

if { [file isdirectory $prefix/lib/pkgconfig] } then {
  prepend-path      PKG_CONFIG_PATH      $prefix/lib/pkgconfig
}

if { [file isdirectory $prefix/include] } then {
  prepend-path      CPATH                $prefix/include
  prepend-path      INCLUDE_PATH         $prefix/include
}
prepend-path CMAKE_PREFIX_PATH  $prefix
