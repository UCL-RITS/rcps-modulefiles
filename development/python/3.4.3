proc ModulesHelp { } {

  puts stderr "\tAdds Python 3.4.3 with pip and virtualenv to your environment variables,"
}

module-whatis "adds Python 3.4.3 with pip and virtualenv to your environment variables"

conflict python
prereq gcc-libs/4.9.2

set              root              /shared/ucl/apps/python/3.4.3/gnu-4.9.2

prepend-path     PATH              $root/bin
append-path      MANPATH           $root/share/man

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

