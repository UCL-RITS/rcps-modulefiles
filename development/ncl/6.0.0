## Built by O.K. on Legion on 2015-07-06

proc ModulesHelp { } {

  puts stderr "\tAdds NCL 6.0.0 to your environment variables,"
}

module-whatis "adds NCL 6.0.0 to your environment variables"

conflict ncl
prereq gcc-libs/4.9.2

prereq hdf/5-1.8.15/gnu-4.9.2
prereq netcdf/4.3.3.1/gnu-4.9.2
prereq udunits/2.2.19
prereq szip/2.1


set              root              /shared/ucl/apps/ncl/6.0.0

setenv           NCARG_ROOT        $root

prepend-path     PATH              $root/bin
append-path      MANPATH           $root/man

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

prepend-path CMAKE_PREFIX_PATH $root
